{
    "name": "wisty",
    "description": "âœ¨ðŸ’¬ Conversational interfaces in the browser.",
    "homepage": "https://xtns.dev/wisty.html",
    "version": "0.0.6",
    "license": "MIT",
    "author": {
        "name": "Loris Nezan",
        "url": "https://xtns.dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/the-new-sky/Wisty.js.git"
    },
    "keywords": [
        "natural language processing",
        "natural language understanding",
        "nlp",
        "conversational interfaces",
        "machine learning",
        "tensorflow",
        "chatbot",
        "chatbots",
        "dialog systems",
        "virtual assistant"
    ],
    "source": "src/index.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "test": "env TS_NODE_PROJECT=\"tests/tsconfig.test.json\" mocha -r ts-node/register tests/**/*.test.ts",
        "build-doc": "typedoc --name Wisty.js --readme assets/api-reference.md --exclude \"**/node_modules/**\" --theme minimal --out docs src && touch docs/.nojekyll"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/chai-as-promised": "^7.1.3",
        "@types/commonmark": "^0.27.4",
        "@types/mocha": "^8.0.3",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "microbundle": "^0.12.3",
        "mocha": "^8.1.1",
        "ts-node": "^8.10.2",
        "typedoc": "^0.17.8",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@tensorflow-models/universal-sentence-encoder": "^1.2.2",
        "@tensorflow/tfjs": "^2.0.1",
        "commonmark": "^0.29.1"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "mocha": true
        },
        "extends": [
            "airbnb-base"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "lines-between-class-members": [
                "error",
                "always",
                {
                    "exceptAfterSingleLine": true
                }
            ],
            "import/prefer-default-export": "off",
            "import/no-default-export": "error",
            "import/no-unresolved": "off",
            "import/extensions": "off",
            "@typescript-eslint/no-unused-vars": [
                2,
                {
                    "args": "none"
                }
            ],
            "max-classes-per-file": [
                "error",
                2
            ],
            "no-loop-func": "off"
        }
    }
}
